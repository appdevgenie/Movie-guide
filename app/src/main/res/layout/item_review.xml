<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/details_layout_padding">

    <TextView
        android:id="@+id/tvReviewItemAuthor"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        tools:text="Author" />

    <TextView
        android:id="@+id/tvReviewItemComment"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingEnd="@dimen/textview_right_padding"
        android:paddingLeft="@dimen/textview_left_padding_contents"
        android:paddingRight="@dimen/textview_right_padding"
        android:paddingStart="@dimen/textview_left_padding_contents"
        android:textStyle="italic"
        tools:text="Top of the pops!" />


</LinearLayout>